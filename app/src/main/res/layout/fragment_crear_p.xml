<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.CrearPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/btnColor">

        <ImageView
            android:id="@+id/logVolverMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:rotation="90"
            android:src="@drawable/chevron_down"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/lblMyproyect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:text="@string/newproyect"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/backproyect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:rotationY="0"
            android:src="@drawable/ic_pencil"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="661dp"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/lblnamee"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblname"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="70dp"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/lblname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/lblescribirName"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/blname2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/LblFecha"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="155dp"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/lblname3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/lblescribirFecha" />

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/calendar"
                    app:tint="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lblArea"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblArea"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="250dp"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/lblescribirArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/lblescribirArea" />
            </RelativeLayout>
            <TextView
                android:id="@+id/lbldescripcion"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="310dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblDescripcion"
                android:textColor="@color/white"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="340dp"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/lbldescripcions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/lblescribirDes" />
            </RelativeLayout>

            <Button
                android:id="@+id/logBtnGenerar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="480dp"
                android:background="@drawable/edit_text_backgroud"
                android:text="@string/logbtnGenerar"
                android:textAllCaps="false"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>