<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.CrearPFragment"
    android:background="@color/fondoMeep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/btnColor">

        <ImageView
            android:id="@+id/logVolverMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:rotation="90"
            android:src="@drawable/chevron_down"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/lblMyproyect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:text="@string/newproyect"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/backproyect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:rotationY="0"
            android:src="@drawable/ic_pencil"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-20dp">

        <RelativeLayout
            android:layout_width="410dp"
            android:layout_height="661dp"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/lblnamee"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblname"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="70dp">

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLength="100"
                    android:background="@drawable/edit_text_backgroud"
                    android:hint="@string/lblescribirName"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/blname2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblToken"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="170dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edit_icono_circular"/>
                <TextView
                    android:id="@+id/lblNum"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="43dp"
                    android:layout_gravity="end"
                    android:hint="@string/lblTok1"
                    android:textColorHint="@color/black"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/editToken"
                    android:layout_width="130sp"
                    android:layout_height="60sp"
                    android:enabled="false"
                    android:gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="35sp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:layout_weight="800"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/logBtnGen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logBtnGen"
                    android:background="@drawable/edit_boton_celeste"
                    android:textColor="@color/white"
                    android:layout_marginTop="190dp"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/lbldescripcion"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="420dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblDescripcion"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="445dp">

                <EditText
                    android:id="@+id/editDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="80dp"
                    android:inputType="text"
                    android:maxLength="1000"
                    android:background="@drawable/edit_text_background2"/>

                <Button
                    android:id="@+id/logbtnCrear"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/logbtnCrear"
                    android:textAllCaps="false"
                    android:layout_marginTop="150dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_boton_rojo"
                    android:layout_marginHorizontal="80dp"
                    android:layout_weight="1"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>