<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoMeep"
    tools:context=".actividades.CreaPubliActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="26dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblCrear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@id/backCuenta"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblCrear"
                android:layout_marginRight="30dp"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/backCuenta"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/perfilImage"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/psyduck_user"/>

            <TextView
                android:id="@+id/lblnamee"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="@string/lblnamee"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="67dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/lblPubliId"
                android:layout_width="340sp"
                android:layout_height="60sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/border1"
                android:gravity="start|top"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lblaniadar"
                android:layout_width="344dp"
                android:layout_height="170dp"
                android:textSize="20sp"
                android:layout_weight="800"
                android:textAlignment="viewStart"
                android:gravity="start|top"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border1"/>

            <LinearLayout
                android:id="@+id/botonesL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="190dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/edit_back"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgJoin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_image"
                    app:tint="@color/green1" />

                <ImageView
                    android:id="@+id/imgnew"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_map"
                    app:tint="@color/btnRojo" />
            </LinearLayout>

            <Button
                android:id="@+id/logBtnPubli"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edit_botones"
                android:text="@string/logBtnPubli"
                android:textAllCaps="false"
                android:layout_marginTop="260dp"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </RelativeLayout>






    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>