<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.MenuNavFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnColor"
        android:layout_gravity="bottom">


        <ImageView
            android:id="@+id/ic_homeNav"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/ic_home_nav"/>
        <ImageView
            android:id="@+id/ic_chatNav"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/ic_chat_nav"/>
        <ImageView
            android:id="@+id/ic_setting_nav"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:src="@drawable/ic_setting_nav"/>

    </LinearLayout>

</FrameLayout>