<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoMeep"
    tools:context=".fragmentos.BienvenidaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/logLblBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logLblBienvenida"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textFontWeight="700"
            android:editable="false"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bienvenida_portada"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logLblNotificaciones"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textFontWeight="800"
            android:layout_marginTop="5dp"
            android:textStyle="italic"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cardTareasP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>